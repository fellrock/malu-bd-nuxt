generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////////////  ENUM GOES HERE  //////////////////
enum Status {
  REGISTERED
  CONFIRMED
  ATTENDED
}

enum Category {
  Amigos
  Creche
  Familia
  Padrinhos
}
////////////////////////////////////////////////////

// Party guest model
model Guest {
  id            String    @id @default(cuid())
  name          String    @unique
  email         String?   // Optional but unique when provided
  inviteCode    String    // No longer unique - multiple guests per code
  status        Status    @default(REGISTERED)
  dietary       String?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // New fields
  category      Category
  kidAge        Int?
  maleKid       Boolean?  @default(false)
  referenceCode String
  cancelledAt   DateTime?
  surveyRatingId Int?      // FK to future Rating table
  
  @@index([inviteCode])
  @@index([referenceCode])
}
